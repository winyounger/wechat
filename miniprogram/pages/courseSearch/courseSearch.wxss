page{
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
}

.top-search-wrapper {
  display: flex;
  flex-direction: column;
  width: 92%;
  height: 150rpx;
  padding: 20rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-color: #fff;

}
.search-item {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  line-height: 60rpx;
}
.search-item:last-child {
  margin-top: 20rpx;
}
.picker {
  padding-left: 10rpx;
}
.address-picker {
  flex: 1;
}